{
  "name": "localization-app",
  "version": "1.0.0",
  "description": "A Node.js/Express application for translating and localizing text and document files with AI-powered styles and custom brand voice injection.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prisma:generate": "prisma generate",
    "prisma:db-push": "prisma db push",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "coverage": "nyc npm test",
    "docker:build": "docker build -t localization-app .",
    "docker:run": "docker run -p 3000:3000 localization-app",
    "docker:compose": "docker-compose up",
    "docker:compose:dev": "docker-compose --profile dev up",
    "docker:compose:prod": "docker-compose --profile production up",
    "k8s:deploy": "kubectl apply -f deploy/kubernetes/",
    "k8s:delete": "kubectl delete -f deploy/kubernetes/",
    "helm:install": "helm install localization-app deploy/helm",
    "helm:upgrade": "helm upgrade localization-app deploy/helm",
    "health:check": "bash deploy/scripts/health-check.sh",
    "deploy:staging": "ENVIRONMENT=staging bash deploy/scripts/deploy.sh",
    "deploy:production": "ENVIRONMENT=production bash deploy/scripts/deploy.sh",
    "deploy:rollback": "bash deploy/scripts/deploy.sh rollback"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "localization",
    "translation",
    "openai",
    "nodejs",
    "express",
    "docker",
    "kubernetes",
    "microservices"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.873.0",
    "@aws-sdk/s3-request-presigner": "^3.873.0",
    "@google/genai": "^1.17.0",
    "@prisma/client": "^5.18.0",
    "@redis-ai/langcache": "^0.10.1",
    "@sentry/node": "^10.5.0",
    "@types/node": "^24.3.0",
    "aws-sdk": "^2.1692.0",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.36.7",
    "connect-redis": "^9.0.0",
    "connect-sqlite3": "^0.9.16",
    "cors": "^2.8.5",
    "cron": "^4.3.3",
    "csurf": "^1.11.0",
    "docx": "^9.5.1",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "express-session": "^1.18.2",
    "gsap": "^3.13.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.4.1",
    "jose": "^5.9.3",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "^1.10.0",
    "multer": "^2.0.2",
    "multer-s3": "^3.0.1",
    "node-cache": "^5.1.2",
    "openai": "^5.12.0",
    "opossum": "^8.1.4",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "passport-microsoft": "^2.1.0",
    "pdf-parse": "^1.1.1",
    "pdfkit": "^0.17.1",
    "pg": "^8.12.0",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "prom-client": "^15.1.3",
    "redis": "^5.8.2",
    "sqlite3": "^5.1.7",
    "srt-parser-2": "^1.2.3",
    "typescript": "^5.9.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "eslint": "^9.18.0",
    "nodemon": "^3.1.9",
    "nyc": "^17.1.0",
    "prisma": "^5.18.0"
  }
}
